
  <tr>
    <td><%= group.id %></td>
    <td><%= link_to(group.title, group_path(group)) %></td>
    <td><%= render_group_description(group) %></td>
    <td><%= group.user.email %></td>
    <% if current_user && current_user == group.user %>
    <td><%= link_to("修改", edit_group_path(group), class: "btn btn-default") %></td>
    <td><%= link_to("删除", group_path(group), method: :delete, class: "btn btn-default",
                    data: { confirm: "你确定删除吗?"}) %></td>
    <% end %>

  </tr>
