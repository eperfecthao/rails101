<%= form_for @group do |f| %>

  <% if @group.errors.any? %>
    <ul>
      <% @group.errors.full_messages.each do |msg| %>
        <%= msg %>
      <% end %>
    </ul>
  <% end %>

  <%= f.label :title %>
  <br>
  <%= f.text_field :title %>
  <br>
  <%= f.label :description %>
  <br>
  <%= f.text_area :description %>
  <br>
  <%= f.submit "完成", data: { disable_with: "Submiting..."} %>
<% end %>
